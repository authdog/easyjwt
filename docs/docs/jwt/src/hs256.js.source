            claims: {
                issuer: 'https://my-app.com',
                audiences: ['users', 'app', 'dashboard'],
                scopes: "user openid",
                sessionDuration: 60 // minutes
            },
            signinOptions: {
                secret
            }
        }
    )

    // ...
    // do something with the token

}

main()