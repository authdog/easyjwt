    },
    "homepage": "https://github.com/authdog/easyjwt#readme",
    "devDependencies": {
        "@types/jest": "^26.0.24",
        "@types/jsonwebtoken": "^8.5.4",
        "@types/node": "^16.0.0",
        "husky": "^7.0.0",
        "jest": "^27.0.6",
        "netlify-cli": "^4.1.18",
        "nock": "^13.1.1",
