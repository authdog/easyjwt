        "tsdoc:deploy": "yarn tsdoc:build && NETLIFY_SITE_ID=<NETLIFY_SITE> netlify deploy --dir=tsdoc --prod",
        "tsdoc:netlify": ""
    },
    "repository": {
        "type": "git",
