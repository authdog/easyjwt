{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowJs": true,
        "declaration": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "baseUrl": ".",
        "lib": ["es6"],
        "sourceMap": true,
        "strictNullChecks": false,
        "noUnusedLocals": true,
        "pretty": true,
        "skipLibCheck": true
    },
    "include": ["lib"],
    "exclude": [
        "node_modules",
        "dist",
        "docs",
        "tsdoc",
        "coverage",
        "**/*.test.ts"
    ],
    "typeRoots": [
      "index.d.ts"
    ]
}
